{
  "name": "gitzin",
  "displayName": "Gitzin",
  "description": "Easily manage Git and generate automatic commit messages",
  "version": "0.0.1",
  "publisher": "felipepimentel",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipepimentel/gitzin.git"
  },
  "license": "MIT",
  "keywords": [
    "git",
    "commit",
    "message",
    "automation"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitzin-viewContainer",
          "title": "Gitzin",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "gitzin-viewContainer": [
        {
          "id": "commitMessageView",
          "name": "Commit Message"
        }
      ]
    },
    "commands": [
      {
        "command": "gitzin.generateCommitMessage",
        "title": "Generate Commit Message"
      },
      {
        "command": "extension.helloWebpack",
        "title": "Hello Webpack"
      }
    ],
    "activationEvents": [
      "onView:commitMessageView",
      "onCommand:gitzin.generateCommitMessage"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./out",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@hediet/node-reload": "^0.8.0",
    "@hediet/std": "^0.6.0",
    "@types/vscode": "^1.94.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "isomorphic-fetch": "^3.0.0"
  }
}
