{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "npm",
		"script": "watch",
		"problemMatcher": {
		  "owner": "typescript",
		  "fileLocation": ["relative", "${workspaceFolder}"],
		  "pattern": [
			{
			  "regexp": "(.*?)\\((\\d+),(\\d+)\\):\\s+(.*?)$",
			  "file": 1,
			  "line": 2,
			  "column": 3,
			  "message": 4
			}
		  ],
		  "background": {
			"activeOnStart": true,
			"beginsPattern": "Compiler is watching files for updates...",
			"endsPattern": "Watching for file changes."
		  }
		},
		"isBackground": true,
		"presentation": {
		  "reveal": "always",
		  "panel": "dedicated"
		},
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  },
	  {
		"type": "npm",
		"script": "watch-tests",
		"problemMatcher": "$tsc-watch",  
		"isBackground": true,
		"presentation": {
		  "reveal": "never",
		  "group": "watchers"
		},
		"group": "build"
	  },
	  {
		"label": "tasks: watch-tests",
		"dependsOn": [
		  "npm: watch",
		  "npm: watch-tests"
		],
		"problemMatcher": []
	  }
	]
  }
  
